FROM python:3.10-slim

WORKDIR /app

# Instalar dependencias base primero
RUN pip install --upgrade pip && \
    pip install fastapi==0.115.12 uvicorn==0.34.0 pydantic==2.10.6 python-multipart==0.0.20 httpx==0.28.1 \
    openai==1.69.0 tiktoken==0.9.0 redis==5.2.1 python-dotenv==1.0.1 tenacity==9.0.0 \
    pytest==8.3.5 supabase==2.15.0

# Instalar componentes de LangChain con las últimas versiones
RUN pip install langchain==0.3.21 langchain-core==0.3.49 langchain-openai==0.3.11 langchain-community==0.3.20

# Copiar código de la aplicación
COPY agent-service/ ./agent-service/
COPY common/ ./common/

# Instalar curl para health checks
RUN apt-get update && apt-get install -y curl && apt-get clean

# Variables de entorno
ENV PYTHONPATH=/app
ENV SKIP_SUPABASE=true
ENV TESTING_MODE=true
ENV LOG_LEVEL=INFO

# Puerto en el que se ejecutará el servicio
EXPOSE 8003

# Directorio de trabajo para el servicio
WORKDIR /app/agent-service

# Health check para K8s
HEALTHCHECK --interval=30s --timeout=5s --start-period=30s --retries=3 CMD curl -f http://localhost:8003/status || exit 1

# Comando para iniciar el servicio
CMD ["uvicorn", "agent_service:app", "--host", "0.0.0.0", "--port", "8003"]
