FROM python:3.10-slim

WORKDIR /app

# Instalar dependencias base primero
RUN pip install --upgrade pip && \
    pip install fastapi==0.115.12 uvicorn==0.34.0 pydantic==2.10.6 python-multipart==0.0.20 httpx==0.28.1 \
    openai==1.69.0 tiktoken==0.9.0 redis==5.2.1 python-dotenv==1.0.1 tenacity==9.0.0 \
    pytest==8.3.5 supabase==2.15.0

# Instalar componentes de LlamaIndex con las últimas versiones
RUN pip install llama-index-core==0.10.22 llama-index-embeddings-openai==0.10.15 \
    llama-index-llms-openai==0.10.12 llama-index-readers-file==0.10.2

# Copiar código de la aplicación
COPY query-service/ ./query-service/
COPY common/ ./common/

# Instalar curl para health checks
RUN apt-get update && apt-get install -y curl && apt-get clean

# Variables de entorno
ENV PYTHONPATH=/app
ENV SKIP_SUPABASE=true
ENV TESTING_MODE=true
ENV LOG_LEVEL=INFO

# Puerto en el que se ejecutará el servicio
EXPOSE 8002

# Directorio de trabajo para el servicio
WORKDIR /app/query-service

# Health check para K8s
HEALTHCHECK --interval=30s --timeout=5s --start-period=30s --retries=3 CMD curl -f http://localhost:8002/status || exit 1

# Comando para iniciar el servicio
CMD ["uvicorn", "query_service:app", "--host", "0.0.0.0", "--port", "8002"]
